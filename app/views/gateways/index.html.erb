<div class="container">

<h1 class="text-center">Existing Gateways</h1>
<hr>

 
<%= link_to 'Register New Gateway', new_gateway_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Gateway Name</th>
      <th>Identifier</th>
      <th>Description</th>
      <th>Status</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gateways.each do |gateway| %>
      <tr>
        <td><%= gateway.gateway_name %></td>
        <td><%= gateway.gateway_hash %></td>
        <td><%= gateway.description %></td>
        <td><%= gateway.status %></td>
        <td><%= gateway.created_at.strftime(fmt='%d-%m-%y %H:%M') %></td>
        <td><%= link_to 'Show', gateway %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>