<div class="container">

<h1 class="text-center">Existing Laboratories</h1>
<hr>

<%= link_to 'Create a new laboratory', new_laboratory_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laboratories.each do |laboratory| %>
      <tr>
        <td><%= laboratory.title.titleize %></td>
        <td><%= laboratory.description %></td>
        <td><%= laboratory.published ? 'Published' : 'Private' %></td>
        <td><%= link_to 'Show', laboratory %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>