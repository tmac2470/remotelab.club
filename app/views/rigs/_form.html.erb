<%= simple_form_for(@rig) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <div class="form-group">
      <%= f.label :rig_type %>
      <%= f.select(:rig_type, Rig.rig_types.keys.map {|type| [type.titleize,type]}, {}, class: 'form-control') %>
    </div>
    <%= f.input :description %>

    <%= f.input :password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
