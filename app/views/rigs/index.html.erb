<div class="container">

<h1 class="text-center">My Things</h1>
<hr>

<%= link_to 'Register Thing Gateway', new_rig_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rigs.each do |rig| %>
      <tr>
        <td><%= rig.title %></td>
        <td><%= rig.rig_type.titleize %></td>
        <td><%= rig.description %></td>
        <td><%= rig.published ? 'Published' : 'Private' %></td>
        <td><%= link_to 'Show', rig %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>