<div class="container">

<h1 class="text-center">Available Things</h1>
<hr>

<table class="table">
  <thead>
    <tr>
      <th>Thing Name</th>
      <th>Thing Identifier</th>
      <th>Thing Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.thing_name %></td>
        <td><%= thing.thing_hash %></td>
        <td><%= thing.thing_type%></td>
        <td><%= link_to 'Show', thing %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
