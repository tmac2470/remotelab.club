<div class="container">
  <h1>
    <%= @thing.thing_name %>
    <small>( Last updated: <%= @thing.updated_at.strftime(fmt='%d-%m-%y %H:%M') %>)</small>
  </h1>
  <p>
    <label>Identifier:</label>
    <%= @thing.thing_hash %>
  </p>

  <p>
    <label>Type:</label>
    <%= @thing.thing_type == 1 ? 'Chartable Data' : 'Not Chartable Data' %>
  </p>

  <hr>
  <div class="buttons">
    <%= link_to 'Edit Thing', edit_thing_path(@thing), class: 'btn btn-primary btn-lg' %>
  </div>
  <hr>

  <h2>Thing Data Available</h2>
  <table class="table">
    <thead>
      <th>Topic Name</th>
      <th>Last Updated</th>
    </thead>
    <tbody>
      <% @topics.each do |t| %>
      <tr>
        <td><%= t.topic %></td>
        <td><%= t.latest %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>